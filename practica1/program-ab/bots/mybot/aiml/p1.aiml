<topic name="lvl_1">

<category>
    <pattern>* fruta</pattern>
    <template>Estoy buscando una fruta
        <think>
            <set name="lista_fruta"><readset>frutas</readset></set>
            <set name="numero"><srai>COUNT <get name="lista_fruta"/></srai></set>
            <set var="pos"><srai>RANDOM <get name="numero" /></srai></set>
            <set name="mifruta">
                <srai>
                    SELECTITEM <get var="pos"/> IN <get name="lista_fruta"/>
                </srai>
            </set>
        </think>
    </template>
</category>

<category>
    <pattern>elegido</pattern>
    <template><get name="mifruta"/> es una buena fruta</template>
</category>

<category>
    <pattern>* color ^</pattern>
    <template>
        <think>
        <set var="color"><star index="2"/></set>
        <set var="posicion">
            <srai>
                FINDITEM <get var="color"/> IN <map name="colores"><get name="mifruta"/></map>
            </srai>
        </set>
        </think>
        <condition var="posicion">
            <li value="0">Nop</li>
            <li> sip, siguiente pregunta</li>
        </condition>
    </template>
</category> 

